# RepoSage API Configuration
# Rename this file to .env and fill in your API keys

# API Keys
GEMINI_API_KEY=your-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GITHUB_TOKEN=your-github-token

# App Configuration
PORT=8000
HOST=0.0.0.0
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/reposage
# For SQLite (development): DATABASE_URL=sqlite:///./reposage.db

# Cache and Task Queue
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=generate-a-secure-random-string
ENCRYPTION_KEY=generate-32-byte-key-for-fernet

# Git Repository Settings
MAX_REPO_SIZE_MB=100
REPO_CACHE_TTL_HOURS=24

# Model Configuration
DEFAULT_CLAUDE_MODEL=claude-3-sonnet-20240229
DEFAULT_GEMINI_MODEL=models/gemini-2.0-flash